[Unit]
Description=tikv-proxy.service
After=network.target
ConditionPathExists=/disk/ssd1/

[Service]
ExecStart=/disk/ssd1/tikv-proxy/tikv-proxy server --conf=/disk/ssd1/tikv-proxy/service.toml
WorkingDirectory=/disk/ssd1/tikv-proxy/
Restart=always
LimitCORE=infinity
LimitNOFILE=100000
LimitNPROC=infinity

[Install]
WantedBy=multi-user.target
